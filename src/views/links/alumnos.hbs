
<section style="background-color: #C53C42;" >
<center><h1>INVENTARIO INTERMEDIO</h1>
<br>
<img class="bd-placeholder-img" width="70%" height="400px" src="http://localhost:4000/img/eee.png"
              aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
   </center>
   <br><br>
<div  class="container">
  <div class="row">
    <div class="col-8">
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="/ultimaclase/listarAlumnos" method="POST">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">

                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Nombre</label>
                  <input type="text" name="nombre" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>

                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Apellido</label>
                  <input type="text" name="Apellido" class="form-control" id="exampleInputPassword1">
                </div>

                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">ciudad</label>
                  <input type="text" name="ciudad" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">semestre</label>
                  <input type="text" name="semestre" class="form-control" id="exampleInputPassword1">
                </div>

                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Ingenieria</label>
                  <input type="text" name="ingenieria" class="form-control" id="exampleInputPassword1">
                </div>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Agregar</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Semestre</th>
            <th scope="col">Ingenieria</th>
            <th>..</th>
            <th>..</th>
          </tr>


        </thead>
        <tbody>
          {{#each listar_alumnos}}
          <tr>
            <th scope="row">{{nombre}}</th>
            <td>{{apellido}}</td>
            <td>{{ciudad}}</td>
            <td>{{semestre}}</td>
            <td>{{ingenieria}}</td>

            <td>
              <div class="row">
                <div class="col-12">
                  <div class="d-grid gap-2">

                    <!-- Button trigger modal -->
                    <a type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#eliminar{{id}}">
                      Eliminar
                    </a>

                    <!-- Modal -->
                    <div class="modal fade" id="eliminar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <form action="/ultimaclase/listaralumnos" method="POST">

                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>

                            <div style="background-color: black;" class="modal-body">
                              ... esta seguro de que desea eliminar a {{ciudad }}

                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <a href="/ultimaclase/eliminarAlumnos/{{id}}" type="submit"
                                class="btn btn-danger">Eliminar</a>

                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
            </td>

            <td>
              <div class="row">
                <div class="col-12">
                  <div class="d-grid gap-2">
                    <!-- Button trigger modal -->
                    <a type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modifica{{id}}">
                     Modificar
                    </a>

                    <!-- Modal -->
                    <div class="modal fade" id="modifica{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>

                            <div class="modal-body">
                              
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button class="btn-btn-info" type="submit">Modificar</button>
                            </div>
                         
                        </div>
                      </div>
                    </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Agregar informaci√≥n
      </button>
    </div>
  </div>
</div>
</section>